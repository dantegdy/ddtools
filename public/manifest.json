{
  "manifest_version": 3,
  "name": "点点工具库",
  "version": "1.0.0",
  "description": "点点工具库",
  "background": {
    "service_worker": "src/pages/background/index.js"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": "notice_avatar.png"
  },
  "icons": {
    "128": "notice_avatar.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "src/pages/content/index.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/js/*.js",
        "assets/css/*.css",
        "icon-34.png",
        ".png"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}